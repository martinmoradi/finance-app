{
  "name": "finance-app",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "start": "turbo start",
    "docker:down": "docker compose down -v",
    "docker:dev:up": "docker compose -f docker-compose.dev.yml up",
    "docker:dev:build": "docker compose -f docker-compose.dev.yml up --build",
    "docker:start": "docker compose -f docker-compose.yml up",
    "docker:start:build": "docker compose -f docker-compose.yml up --build",
    "clean": "turbo clean",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:ci": "turbo test:ci",
    "test:watch": "turbo test:watch",
    "test:e2e": "turbo test:e2e",
    "test:e2e:ci": "turbo test:e2e:ci",
    "playwright": "turbo playwright --filter=@repo/playwright-web",
    "playwright:ui": "turbo playwright:ui --filter=@repo/playwright-web",
    "playwright:debug": "turbo playwright:debug --filter=@repo/playwright-web",
    "playwright:ci": "turbo playwright:ci --filter=@repo/playwright-web",
    "combine-coverage": "mkdir -p coverage && npx istanbul-merge --out coverage/coverage-final.json 'app/*/coverage/coverage-final.json' 'packages/*/coverage/coverage-final.json'",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "turbo db:generate --filter=@repo/database",
    "db:migrate": "turbo db:migrate --filter=@repo/database",
    "db:seed": "turbo db:seed --filter=@repo/database",
    "db:studio": "turbo db:studio --filter=@repo/database",
    "db:push": "turbo db:push --filter=@repo/database",
    "db:reset": "turbo db:reset --filter=@repo/database",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.0",
  "engines": {
    "node": ">=22"
  }
}
