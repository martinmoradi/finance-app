{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/*.ts", "**/*.tsx", "**/*.json"],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "env": [
        "PORT",
        "ALLOWED_ORIGINS",
        "DATABASE_URL",
        "NEXT_PUBLIC_APP_URL",
        "NEXT_PUBLIC_API_URL"
      ],
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "public/dist/**"]
    },
    "start": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "clean": {
      "dependsOn": [],
      "cache": false
    },
    "test": {
      "dependsOn": [],
      "cache": false
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:ci": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "passThroughEnv": ["PLAYWRIGHT_*"],
      "outputs": ["playwright-report/**"],
      "cache": false
    },
    "test:e2e:ui": {
      "dependsOn": ["^build"],
      "passThroughEnv": ["PLAYWRIGHT_*"],
      "outputs": ["playwright-report/**"],
      "cache": false
    },
    "test:e2e:debug": {
      "dependsOn": ["^build"],
      "passThroughEnv": ["PLAYWRIGHT_*"],
      "outputs": ["playwright-report/**"],
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "db:generate": {
      "dependsOn": ["^build"]
    },
    "db:migrate": {
      "dependsOn": ["^build"]
    },
    "db:seed": {
      "dependsOn": ["^build"]
    },
    "db:studio": {
      "dependsOn": ["^build"]
    },
    "db:push": {
      "dependsOn": ["^build"]
    },
    "db:reset": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "cache": false,
      "env": ["TEST"]
    }
  }
}
